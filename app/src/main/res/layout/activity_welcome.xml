<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:alin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <com.alin.lib.bannerview.view.CommonFramLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <com.alin.lib.bannerlib.BannerView
        android:id="@+id/welcome_bn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        alin:pointer_drawable_unselected="@drawable/bg_black_circle"
        alin:pointer_drawable_selected="@drawable/bg_red_circle"
        alin:title_gravity="center"
        alin:banner_pointer_gravity="center"
        alin:is_infinite="false"
        alin:pointer_type="circle"
        alin:slid_effect="Alpha"
        alin:indicator_background_color="@color/transparent"
        alin:pointer_margin="10dp"
        alin:last_indicator_is_visible="true"
        />
    </com.alin.lib.bannerview.view.CommonFramLayout>
    <TextView
        android:id="@+id/skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="跳过"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/enter_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="进入"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:visibility="gone"
        />

</RelativeLayout>